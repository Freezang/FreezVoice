local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- CHANGER L'URL AVEC LE LIEN DU FICHIER RAW GITHUB !
local WHITELIST_URL = "https://raw.githubusercontent.com/TonGitHub/MonRepo/main/whitelist.lua"

local function isWhitelisted()
    local success, result = pcall(function()
        return HttpService:GetAsync(WHITELIST_URL)
    end)
    
    if success then
        local whitelist = loadstring(result)()
        return whitelist[LocalPlayer.UserId] == true
    end
    
    return false
end

if isWhitelisted() then
    print("✅ Accès autorisé. Exécution du script.")

    -- Mettre ici le script de reconnexion vocal (obfusqué après)
else
    print("⛔ Accès refusé.")
end
